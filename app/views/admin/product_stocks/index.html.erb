<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Product stocks</h1>
    <%= link_to "New product stock", new_admin_product_product_stock_path(@product), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="admin_product_stocks" class="min-w-full">
    <% @product_stocks.each do |product_stock| %>
      <%= render partial: 'admin/product_stocks/product_stock', locals: { product_stock: product_stock } %>
      <% Rails.logger.debug("Product Stock: #{product_stock.inspect}") %>
    <% end %>

  </div>

</div>
